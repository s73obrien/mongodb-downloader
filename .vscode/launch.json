  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Unit Tests",
      "program": "${workspaceFolder}/node_modules/tape/bin/tape",
      "args": [
        "test/*.js"
      ],
      "env": {
        "DEBUG": "mongodb-downloader"
      },
      "console": "integratedTerminal",
      "smartStep": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "run CLI",
      "program": "${workspaceFolder}/lib/cli.js",
      "console": "integratedTerminal"
    }
  ]
}